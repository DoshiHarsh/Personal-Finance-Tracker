"triggers":{
    "accounts":{
        "id_field" : "account_id"
    },
    "account_types":{
        "id_field" : "account_type_id"
    },
    "categories":{
        "id_field" : "category_id"
    },
    "cashflow_transactions":{
        "id_field" : "transaction_id"
    },
    "cashflow_transfers":{
        "id_field" : "transfer_id"
    },
    "currencies":{
        "id_field" : "currency_abbr"
    },
    "currency_rates":{
        "id_field" : "currency_abbr"
    },
